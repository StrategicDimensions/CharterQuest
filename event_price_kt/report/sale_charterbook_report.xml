<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_book_proforma">
        <t t-call="web.external_layout">
            <div class="page">
                <style>
                    table,tbody,thead, tr,th,td{
                    border:2px solid black;
                    }
                    tr,td,th{
                    height:15%;
                    padding: 0px;
                    margin: 0px;
                    }
                    p{
                    margin: 5px;
                    }
                    span{
                    margin: 5px;
                    }
                    table .header_title{
                    font-size:25px;
                    font-color:green;
                    font-weight: 800;
                    }
                    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr >
                    td, .table > tbody > tr > td, .table > tfoot > tr > td {
                    padding: 2px;
                    line-height: 1;
                    }
                </style>
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <td style="width: 165px;">
                                    <t t-if="res_company.logo">
                                        <img class="image"
                                             src="/event_price_kt/static/src/img/charterbooks.jpg"
                                             style="border:auto; height:135px;width:240px;margin:5px;"/>
                                    </t>
                                </td>
                                <td>
                                    <table class="table" style="margin: 5px;width: 99%;">
                                        <thead>
                                            <tr>
                                                <td>
                                                    <b>
                                                        <center>
                                                            <p style="color:green;" class="header_title">FREE
                                                                QUOTE/PROFORMA INVOICE
                                                            </p>
                                                        </center>
                                                    </b>
                                                    <p>
                                                        <font color="white"></font>
                                                    </p>
                                                </td>
                                            </tr>
                                        </thead>
                                    </table>
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table class="table">
                        <thead>
                            <tr>
                                <td colspan="3">
                                    <p>Registration No: 2016/159500/07.</p>
                                </td>
                                <td>
                                    <p>
                                        <b>Doc No.</b>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b>
                                            <span t-field="o.name"/>
                                        </b>
                                    </p>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5">
                                    <p style="terp_default_8">CHARTERQUEST HOUSE, Metropolitan Park, 374 Rivonia
                                        Boulevard, Rivonia, SANDTON, South Africa
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Tel no.</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">+27 (0)11 234 9223</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">+27 (0)73 174 5454</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">Email</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">accounts@charterquest.co.za</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Fax</p>
                                </td>
                                <td colspan="4" style="border:2px solid black">
                                    <p style="terp_default_8">0862 188 713</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Website</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">www.charterquest.co.za</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">Date</p>
                                </td>
                                <td colspan="2">
                                    <p style="terp_default_8">
                                        <span t-field="o.date_order"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table">
                        <thead>
                            <tr style="background-color:darkgray;">
                                <td style="padding: 2px;line-height: 1;font-size: 20px;font-weight: 500;width: 30%;">
                                    <p>ADDRESSED TO</p>
                                </td>
                                <td colspan="3">
                                    <sapn>

                                    </sapn>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <p>Name</p>
                                </td>
                                <td>
                                    <p>
                                        <span t-esc="o.partner_id.name"/>
                                    </p>
                                </td>
                                <td>
                                    <p>Student no</p>
                                </td>
                                <td>
                                    <p>
                                        <span t-esc="o.partner_id.student_number"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Address</p>
                                </td>
                                <td colspan="3">
                                    <p style="terp_default_8">
                                        <span t-esc="o.partner_id and o.partner_id.street or ''"/>
                                        <span>,</span>
                                        <span t-esc="o.partner_id and o.partner_id.street2 or  ''"/>
                                        <span>,</span>
                                        <span t-esc="o.partner_id and o.partner_id.city or  ''"/>
                                        <span>,</span>
                                        <span t-esc="o.partner_id and o.partner_id.state_id and o.partner_id.state_id.name or  ''"/>
                                        <span>,</span>
                                        <span t-esc="o.partner_id and o.partner_id.zip or  ''"/>
                                        <span>,</span>
                                        <span t-esc="o.partner_id and o.partner_id.country_id and o.partner_id.country_id.name or  '' "/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Tel</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p>
                                        <span t-esc="o.partner_id and o.partner_id.phone or 'Not Provided'"/>
                                    </p>
                                </td>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Mobile</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p>
                                        <span t-esc="o.partner_id and o.partner_id.mobile or 'Not Provided'"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>Email</p>
                                </td>
                                <td colspan="3">
                                    <p>
                                        <span t-esc="o.partner_id and o.partner_id.email or 'Not Provided'"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="table">
                        <thead>
                            <tr style="background-color:darkgray;">
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Description</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Taxes</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Quantity</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Unit Price</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Disc.(%)</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span style="float:right;">
                                        <b>Price</b>
                                    </span>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.order_line" t-as="l">
                                <tr>
                                    <td style="padding: 2px;line-height: 1;width:45%;">
                                        <p t-esc="l.name" style="hyphens: none;"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <t t-foreach="l.tax_id" t-as="lt">
                                            <span style="float:right;" t-esc="lt.name"/>
                                        </t>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="l.product_uom_qty"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.price_unit)"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.discount)"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:15%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.price_subtotal)"/>
                                        <span style="float:right;" t-esc="o.currency_id.symbol"/>
                                    </td>
                                </tr>
                            </t>
                            <tr style="background-color:darkgray;">
                                <td colspan="2">
                                    <span style="float:right;">SUB TOTAL</span>
                                </td>
                                <td colspan="3">
                                    <p>
                                        <font color="white"></font>
                                    </p>
                                </td>
                                <td>
                                    <span style="float:right;" t-esc="'%.2f'%(o.amount_untaxed)"/>
                                    <span style="float:right;" t-esc="o.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span style="float:right;">TAXES</span>
                                </td>
                                <td colspan="3">
                                    <p>
                                    </p>
                                </td>
                                <td>
                                    <span style="float:right;" t-esc="'%.2f'%(o.amount_tax)"/>
                                    <span style="float:right;" t-esc="o.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr style="background-color:black;">
                                <td colspan="2">
                                    <span style="float:right; color:white;">TOTAL FEES</span>
                                </td>
                                <td colspan="3">
                                    <span></span>
                                </td>
                                <td>
                                    <span style="float:right; color:white;" t-esc="'%.2f'%(o.amount_total)"/>
                                    <span style="float:right; color:white;" t-esc="o.currency_id.symbol"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <t t-if="o.sale_order_link">
                        <a itemprop="url" t-att-href="o.sale_order_link">
                        </a>
                    </t>
                    <br/>
                    <br/>
                    <p style="background-color:darkgray; border: 2px solid black;margin:0px;">OUR TERMS AND CONDITIONS:</p>
                    <t t-set="pc_exam"
                       t-value="request.env['terms.conditions'].search([('type','=','CharterBooks')],order='id desc' ,limit=1)"/>
                    <t t-if="pc_exam">
                        <span t-raw="pc_exam.terms_condition">
                        </span>
                    </t>

                    <table class="table" style="background-color:black;">
                        <thead>
                            <tr>
                                <td>
                                    <p align="center">
                                        <font color="white">BANKING DETAILS: Business Cheque Account No. 626 8076 7054:
                                            The CharterQuest Professional Education Institute: First National Bank
                                            Northgate Center: Branch Code 250655. Swift Code:FIRNZAJJ.Proof of payment
                                            should contain proforma invoice number as reference and must be sent to
                                            email or fax number provided above
                                        </font>
                                    </p>
                                    <p align="center">
                                        <font color="white">THANK YOU FOR YOUR CONFIDENCE!</font>
                                    </p>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="report_book">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="event_price_kt.report_book_proforma"/>
            </t>
        </t>
    </template>

    <template id="chr_book_sale_rpt" inherit_id="event_price_kt.enrolment_sale_report">

    </template>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_book_proforma">
        <t t-call="web.external_layout">
            <div class="page">
                <style>
                    table,tbody,thead, tr,th,td{
                    border:2px solid black;
                    }
                    tr,td,th{
                    height:15%;
                    padding: 0px;
                    margin: 0px;
                    }
                    p{
                    margin: 5px;
                    }
                    span{
                    margin: 5px;
                    }
                    table .header_title{
                    font-size:25px;
                    font-color:green;
                    font-weight: 800;
                    }
                    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th, .table > thead > tr >
                    td, .table > tbody > tr > td, .table > tfoot > tr > td {
                    padding: 2px;
                    line-height: 1;
                    }
                </style>
                <div class="row">
                    <table class="table">
                        <thead>
                            <tr>
                                <td style="width: 165px;">
                                    <t t-if="res_company.logo">
                                        <img class="image"
                                             src="/event_price_kt/static/src/img/charterbooks.jpg"
                                             style="border:auto; height:135px;width:240px;margin:5px;"/>
                                    </t>
                                </td>
                                <td>
                                    <table class="table" style="margin: 5px;width: 99%;">
                                        <thead>
                                            <tr>
                                                <td>
                                                    <b>
                                                        <center>
                                                            <span style="color:green" class="header_title">INVOICE
                                                            </span>
                                                        </center>
                                                    </b>
                                                    <p>
                                                        <font color="white"></font>
                                                    </p>
                                                </td>
                                            </tr>
                                        </thead>
                                    </table>
                                </td>
                            </tr>
                        </thead>
                    </table>
                    <table class="table">
                        <thead>
                            <tr>
                                <td colspan="3">
                                    <p>Registration No: 2016/159500/07.</p>
                                </td>
                                <td>
                                    <p>
                                        <b>Doc No.</b>
                                    </p>
                                </td>
                                <td>
                                    <p>
                                        <b>
                                            <span t-field="doc.number"/>
                                        </b>
                                    </p>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="5">
                                    <p style="terp_default_8">CHARTERQUEST HOUSE, Metropolitan Park, 374 Rivonia
                                        Boulevard, Rivonia, SANDTON, South Africa
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Tel no.</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">+27 (0)11 234 9223</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">+27 (0)73 174 5454</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">Email</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">accounts@charterquest.co.za</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Fax</p>
                                </td>
                                <td colspan="4" style="border:2px solid black">
                                    <p style="terp_default_8">0862 188 713</p>
                                </td>
                            </tr>
                            <tr>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Website</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">www.charterquest.co.za</p>
                                </td>
                                <td>
                                    <p style="terp_default_8">Date</p>
                                </td>
                                <td colspan="2">
                                    <p style="terp_default_8">
                                        <span t-esc="doc.date_invoice or 'NA'"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table">
                        <thead>
                            <tr style="background-color:darkgray;">
                                <td style="padding: 8px;line-height: 1;font-size: 20px;font-weight: 500;width: 30%;">
                                    <span>INVOICE TO</span>
                                </td>
                                <td colspan="3">
                                    <sapn>

                                    </sapn>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-if="doc.affiliation=='2'"> 
                                <td>
                                    <p>Company</p>
                                </td>
                                <td>
                                    <span t-esc="doc.partner_id.student_company or ''"/>
                                </td>
                                <td>
                                    <p style="terp_default_8">VAT No</p>
                                </td>
                                <td>
                                    <span t-esc="doc.partner_id.vat_no_comp or ''"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>Name</p>
                                </td>
                                <td>
                                    <p>
                                        <span t-esc="doc.partner_id.name"/>
                                    </p>
                                </td>
                                <td>
                                    <p>Student no</p>
                                </td>
                                <td>
                                    <p><span t-esc="doc.partner_id.student_number"/></p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Address</p>
                                </td>
                                <td colspan="3">
                                    <p style="terp_default_8">
                                        <span t-esc="doc.partner_id and doc.partner_id.street or ''"/>
                                        <span>,</span>
                                        <span t-esc="doc.partner_id and doc.partner_id.street2 or  ''"/>
                                        <span>,</span>
                                        <span t-esc="doc.partner_id and doc.partner_id.city or  ''"/>
                                        <span>,</span>
                                        <span t-esc="doc.partner_id and doc.partner_id.state_id and doc.partner_id.state_id.name or  ''"/>
                                        <span>,</span>
                                        <span t-esc="doc.partner_id and doc.partner_id.zip or  ''"/>
                                        <span>,</span>
                                        <span t-esc="doc.partner_id and doc.partner_id.country_id and doc.partner_id.country_id.name or  '' "/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p style="terp_default_8">Tel</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p>
                                        <span t-esc="doc.partner_id and doc.partner_id.phone or 'Not Provided'"/>
                                    </p>
                                </td>
                                <td style="border:2px solid black">
                                    <p style="terp_default_8">Mobile</p>
                                </td>
                                <td style="border:2px solid black">
                                    <p>
                                        <span t-esc="doc.partner_id and doc.partner_id.mobile or 'Not Provided'"/>
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>Email</p>
                                </td>
                                <td colspan="3">
                                    <p>
                                        <span t-esc="doc.partner_id and doc.partner_id.email or 'Not Provided'"/>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>


                    <table class="table">
                        <thead>
                            <tr style="background-color:darkgray;">
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Description</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Taxes</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Quantity</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Unit Price</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Disc.(%)</b>
                                    </span>
                                </td>
                                <td style="padding: 5px;line-height: 1;text-align:center;">
                                    <span>
                                        <b>Price</b>
                                    </span>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.invoice_line_ids" t-as="l">
                                <tr>
                                    <td style="padding: 2px;line-height: 1;width:45%;">
                                        <p t-esc="l.name" style="hyphens: none;float:left;"/>
                                        <t t-if="l.product_id.sale_ok or l.product_id.purchase_ok">
                                            <t t-if="l.product_id.public_categ_ids">
                                                <p>
                                                    [
                                                    <t t-foreach="l.product_id.public_categ_ids" t-as="categ_id">
                                                        <span t-esc="categ_id.display_name"></span>,
                                                    </t>
                                                    ]
                                                </p>
                                            </t>
                                        </t>
                                    </td>

                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <t t-foreach="l.invoice_line_tax_ids" t-as="lt">
                                            <span style="float:right;" t-esc="lt.name"/>
                                        </t>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="l.quantity"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.price_unit)"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:10%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.discount)"/>
                                    </td>
                                    <td style="padding: 2px;line-height: 1;width:15%;">
                                        <span style="float:right;" t-esc="'%.2f'%(l.price_subtotal)"/>
                                        <span style="float:right;" t-esc="doc.currency_id.symbol"/>
                                    </td>
                                </tr>
                            </t>
                            <tr style="background-color:darkgray;">
                                <td colspan="2">
                                    <span style="float:right;">SUB TOTAL</span>
                                </td>
                                <td colspan="3">
                                    <p>
                                        <font color="white"></font>
                                    </p>
                                </td>
                                <td>
                                    <span style="float:right;" t-esc="'%.2f'%(doc.amount_untaxed)"/>
                                    <span style="float:right;" t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <span style="float:right;">TAXES</span>
                                </td>
                                <td colspan="3">
                                    <p>
                                    </p>
                                </td>
                                <td>
                                    <span style="float:right;" t-esc="'%.2f'%(doc.amount_tax)"/>
                                    <span style="float:right;" t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr style="background-color:black;">
                                <td colspan="2">
                                    <span style="float:right; color:white;">TOTAL FEES</span>
                                </td>
                                <td colspan="3">
                                    <span></span>
                                </td>
                                <td>
                                    <span style="float:right; color:white;" t-esc="'%.2f'%(doc.amount_total)"/>
                                    <span style="float:right; color:white;" t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr style="background-color:darkgray;">
                                <td colspan="2">
                                    <span>(All EFT Payments are subject to confirmation)</span>
                                    <br/>
                                    <span style="float:right;">Amount Paid</span>
                                </td>
                                <td colspan="3">
                                    <span></span>
                                </td>
                                <td>
                                    <span style="float:right;" t-esc="'%.2f'%(doc.amount_total - doc.residual)"/>
                                    <span style="float:right;" t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr style="background-color:black;">
                                <td colspan="2">
                                    <span style="float:right; color:white">Outstanding Balance</span>
                                </td>
                                <td colspan="3">
                                    <span></span>
                                </td>
                                <td>
                                    <span style="float:right; color:white;" t-esc="'%.2f'%(doc.residual)"/>
                                    <span style="float:right; color:white;" t-esc="doc.currency_id.symbol"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <br/>
                    <p style="background-color:darkgray; border: 2px solid black;">OUR TERMS AND CONDITIONS:</p>
                    <t t-set="charterbooks"
                       t-value="request.env['terms.conditions'].search([('type','=','CharterBooks')],order='id desc' ,limit=1)"/>
                    <t t-set="pc_exam"
                       t-value="request.env['terms.conditions'].search([('type','=','PC Exams')],order='id desc' ,limit=1)"/>
                    <t t-if="charterbooks">
                        <span t-raw="charterbooks.terms_condition">
                        </span>
                    </t>
                    <t t-if="pc_exam">
                        <span t-raw="pc_exam.terms_condition">
                        </span>
                    </t>

                    <table class="table" style="background-color:black;">
                        <thead>
                            <tr>
                                <td>
                                    <p align="center">
                                        <font color="white">BANKING DETAILS: Business Cheque Account No. 626 8076 7054:
                                            The CharterQuest Professional Education Institute: First National Bank
                                            Northgate Center: Branch Code 250655. Swift Code:FIRNZAJJ.Proof of payment
                                            should contain proforma invoice number as reference and must be sent to
                                            email or fax number provided above
                                        </font>
                                    </p>
                                    <p align="center">
                                        <font color="white">THANK YOU FOR YOUR CONFIDENCE!</font>
                                    </p>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="report_invoice_charterbook">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="event_price_kt.report_invoice_book_proforma"/>
            </t>
        </t>
    </template>


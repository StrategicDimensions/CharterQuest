<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="cfo_snr_jnr.login1" inherit_id="web.login" name="Login">
            <xpath expr="//t/form" position='attributes'>
                <attribute name='style'>max-width: 385px; !important</attribute>
            </xpath>
            <xpath expr="//t/form/input" position="after">
                <p style="text-align: center; font-size: large;"><strong>Login to CFO Senior/Junior Account</strong></p>
            </xpath>
        </template>

        <template id="cfo_snr_jnr.login" inherit_id="auth_signup.login" name="Sign up - Reset Password">
            <xpath expr="//a[2]" position="replace">
                <a t-if="request.env['res.config.settings'].sudo().search([],limit=1,order='id desc').auth_signup_reset_password" t-attf-href="/web/reset_password?{{ keep_query() }}" class="btn btn-link pull-right">Forgot Password</a>
            </xpath>
            <xpath expr="//a[@t-if='signup_enabled']" position="replace">
                <a t-if="request.env['res.config.settings'].sudo().search([],limit=1,order='id desc').auth_signup_uninvited == 'b2c'" t-attf-href="/web/signup?{{ keep_query() }}" class="btn btn-link pull-right">Register</a>
            </xpath>
        </template>

        <template id="cfo_snr_jnr.reset_password" inherit_id="auth_signup.reset_password" name="Reset password">
            <xpath expr="//t/form" position='attributes'>
                <attribute name='style'>max-width: 385px; !important</attribute>
            </xpath>
            <xpath expr="//t/form/input" position="after">
                <p style="text-align: center; font-size: large;"><strong>Reset CFO Senior/Junior Account Password</strong></p>
            </xpath>
            <label for="login" position="replace">
                <label for="login" class="control-label">Email</label>
            </label>
            <button type="submit" position="replace">
                <a t-if="token and not invalid_token" href="/web/login" class="btn btn-link pull-right">Back to Login</a>
                <button type="submit" class="btn btn-primary pull-left">Reset Password</button>
            </button>
        </template>

        <template id="cfo_snr_jnr.fields" inherit_id="auth_signup.fields" name="Auth Signup/ResetPassword form fields">
            <label for="login" position="replace">
                <label for="login" class="control-label">Email</label>
            </label>
            <label for="name" position="replace">
                <label for="name" class="control-label">Name</label>
            </label>
            <xpath expr="//input[@name='login']" position="attributes">
                <attribute name="style">background-color: rgb(216, 214, 214); !important</attribute>
            </xpath>
            <xpath expr="//input[@name='name']" position="attributes">
                <attribute name="style">background-color: rgb(216, 214, 214); !important</attribute>
            </xpath>
        </template>


<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="portal_show_cfo_login" inherit_id="portal.portal_show_sign_in" name="Show CFO Log In">
            <xpath expr="//ul[@id='top_menu']/li[@class='divider']" position="after">
                <li groups="base.group_public">
                    <a t-attf-href="/login">
                        <b>CFO Login</b>
                    </a>
                </li>
            </xpath>
        </template>

        <template id="cfo_snr_jnr.portal_layout" inherit_id="portal.portal_layout" name="CFO Portal access">
            <xpath expr="//t/div/div/div/div/ol/li/a" position='after'>
                <t t-if="request.session.cfo_login">
                    &amp;nbsp;&amp;nbsp;<a href="/cfo_senior">CFO Senior</a>
                    &amp;nbsp;&amp;nbsp;<a href="/cfo_junior">CFO Junior</a>
                </t>
            </xpath>
        </template>

    </data>
</odoo>
